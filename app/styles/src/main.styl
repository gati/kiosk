*
	font-family:'Helvetica-Neue-Ultralite', Helvetica
	font-weight:300
body
	overflow:hidden
	padding:0
	margin:0
ul, li
	padding:0
	margin:0
	list-style:none;
		
#background
	width:100%;
	right:0
	position:absolute;
	top:0;
	background:rgba(166,192,215,1)
	height:100%

header
	color:#fff
	position:fixed
	top:0
	width:100%
	z-index:1
	text-align:center;
	margin:15px 0;
	-webkit-perspective:600;

	nav
		width:120%;
		// overflow:hidden;
		margin:0 auto;
		text-align center
		margin-left:10%;
		-webkit-transform:rotateY(40deg)
		-webkit-transform-origin: 0 0;
		
		div.option
			height:75px;
			width:150px;
			float:left;
			position:relative;
			top:4px;
			z-index:4
			-webkit-transition: all 0.2s ease-in-out;
			.block 
				height:100%;
				-webkit-transition: all 1s ease-in-out;

			div.top 
				background-color:rgba(80,83,89,1);
				height:47%;
				width:100%;
				top:none;
				z-index:1;
				-webkit-transform: skew(20deg);
			div.bottom 
				background-color:rgba(49,58,65,1);
				height:47%;
				width:100%;
				z-index:1;
				-webkit-transform: skew(-20deg);
			div.top 
				background-color:rgba(80,83,89,1);
				height:47%;
				width:100%;
				top:none;
				z-index:1;
				-webkit-transform: skew(20deg);
			div.bottom 
				background-color:rgba(49,58,65,1);
				height:47%;
				width:100%;
				z-index:1;
				-webkit-transform: skew(-20deg);
			div.icon
				position:absolute;
				top:0;
				height:100%;
				width:50%;
				z-index:2;
				left:31%
				&.shuttle
					background:url('/images/shuttle.png') 0 0 no-repeat;
					background-size: 70%;
					background-position: 6px 3px;
				&.venue
					background:url('/images/venue.png') 0 0 no-repeat;
					background-size: 50%;
					background-position: 6px 7px;
				&.social
					background:url('/images/social.png') 0 0 no-repeat;
					background-size: 70%;
					background-position: 6px -3px;
				&.updates
					background:url('/images/updates.png') 0 0 no-repeat;
					background-size: 70%;
					background-position: 6px -3px;
		div.options
			margin-left:150px;
		div.title
			color:rgba(80,83,89,1);
			position: absolute;
			z-index: 5;
			font-size: 2.2em;
			font-family: Georgia;
			font-style: italic;
			text-align: center;
			width: 100%;
			-webkit-transition:all 0.5s ease-in-out;
		div.logo
			height:75px;
			width:157px;
			float:left;
			z-index:5;
			position:absolute;
			-webkit-transform:rotateY(0)
			background:url('/images/logo.png') 0 0 no-repeat;
			
#kiosk
	-webkit-transition:all 0.5s ease-in-out
	text-align:center;
	overflow hidden
	.slide
		height:100%;
		max-height:80%
		width:100%
		display:block
		float:left;
		margin-top:130px;
		.content
			width:80%;
			height:80%;
			margin:0 auto;
			iframe
				width:100%;
				height:100%;
				margin:0 auto
			.image
				height:100%;
				width:100%;
			h2.sub
				font-style:italic
			.map
				width:100%
				height:250px
				overflow:hidden
				img 
					width:75%
	[slide-type="schedule"]
		ul
			margin-top:5px;
			li
				border-bottom:1px solid #333
				padding:10px 0
				overflow:hidden;
				.event-cell
					padding:5px 15px 5px 5px
					max-width:33%
					float:left;
					text-align:left;
				.event-name
					font-size:1.2em
					font-style:italic
					max-width:40%
					word-wrap:break-word;
			li.header
				background:#ccc
				text-align center

	[slide-type="image"]
	[slide-type="url"]
	[slide-type="updates"]

	.slide.visible
		opacity:1

.container {
  width: 157px;
  height: 75px;
  position: relative;
  top:-5px;
}

.box {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index:1;
  -webkit-transform-style: preserve-3d;
  -webkit-transform: rotateY(23deg) rotateX(-46deg);
  -webkit-transition:all 0.5s ease-in-out
  left:-44px
}
.option
	&.selected
		.title
			color:rgba(192,81,57,1)
			text-shadow:0 0 1px #000
		.box
			-webkit-transform: rotateY(23deg) rotateX(317deg);
			.top
				background:rgba(246,148,96,1)
			.front
				background:rgba(93,34,10,1)

.box figure {
  display: block;
  position: absolute;
}

.box .front,
.box .back {
  width: 157px;
  height: 50px;
}

.box .top,
.box .bottom {
  width: 157px;
  height: 50px;
}

.box .front  { background:rgba(49,58,65,1);-webkit-transform: rotateY(   0deg ) translateZ(  24px ); }
.box .back   { -webkit-transform: rotateX( 180deg ) translateZ(  24px ); }
.box .top    { background:rgba(80,83,89,1);-webkit-transform: rotateX(  90deg ) translateZ( 26px ); }
.box .bottom { -webkit-transform: rotateX( -90deg ) translateZ( 26px ); }
