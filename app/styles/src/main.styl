*
	font-family:'Helvetica-Neue-Ultralite', Helvetica
	font-weight:300
body
	overflow:hidden
	padding:0
	margin:0
	background:rgba(150,202,216,1);
ul, li
	padding:0
	margin:0
	list-style:none;
		
#background
	width:100%;
	right:0
	position:absolute;
	top:0;
	background:rgba(166,192,215,1)
	height:100%

header
	color:#fff
	position:fixed
	top:0
	width:100%
	z-index:1
	text-align:center;
	margin:15px 0;
	-webkit-perspective:600;

	nav
		width:120%;
		// overflow:hidden;
		margin:0 auto;
		text-align center
		margin-left:10%;
		-webkit-transform:rotateY(40deg)
		-webkit-transform-origin: 0 0;
		
		div.option
			height:75px;
			width:150px;
			float:left;
			position:relative;
			top:4px;
			z-index:4
			-webkit-transition: all 0.2s ease-in-out;
			.block 
				height:100%;
				-webkit-transition: all 1s ease-in-out;

			div.top 
				background-color:rgba(80,83,89,1);
				height:47%;
				width:100%;
				top:none;
				z-index:1;
				-webkit-transform: skew(20deg);
			div.bottom 
				background-color:rgba(49,58,65,1);
				height:47%;
				width:100%;
				z-index:1;
				-webkit-transform: skew(-20deg);
			div.top 
				background-color:rgba(80,83,89,1);
				height:47%;
				width:100%;
				top:none;
				z-index:1;
				-webkit-transform: skew(20deg);
			div.bottom 
				background-color:rgba(49,58,65,1);
				height:47%;
				width:100%;
				z-index:1;
				-webkit-transform: skew(-20deg);
			div.icon
				position:absolute;
				top:0;
				height:100%;
				width:50%;
				z-index:2;
				left:31%
				&.shuttle
					background:url('/images/shuttle.png') 0 0 no-repeat;
					background-size: 70%;
					background-position: 6px 3px;
				&.venue
					background:url('/images/venue.png') 0 0 no-repeat;
					background-size: 50%;
					background-position: 6px 7px;
				&.social
					background:url('/images/social.png') 0 0 no-repeat;
					background-size: 70%;
					background-position: 6px -3px;
				&.updates
					background:url('/images/updates.png') 0 0 no-repeat;
					background-size: 70%;
					background-position: 6px -3px;
		div.options
			margin-left:150px;
		div.title
			color:rgba(80,83,89,1);
			position: absolute;
			z-index: 5;
			font-size: 2.2em;
			font-family: Georgia;
			font-style: italic;
			text-align: center;
			width: 100%;
			-webkit-transition:all 0.5s ease-in-out;
		div.logo
			height:75px;
			width:157px;
			float:left;
			z-index:5;
			position:absolute;
			-webkit-transform:rotateY(0)
			background:url('/images/logo.png') 0 0 no-repeat;
			
#kiosk
	-webkit-transition:all 0.5s ease-in-out
	text-align:center;
	overflow hidden
	.slide
		height:100%;
		max-height:80%
		width:100%
		display:block
		float:left;
		margin-top:140px;
		.content
			width:80%;
			height:80%;
			margin:0 auto;
			iframe
				width:100%;
				height:100%;
				margin:0 auto
			.image
				height:100%;
				width:100%;
			h2.sub
				font-style:italic
	.slide.visible
		opacity:1
	[slide-type="schedule"]
		ul
			margin-top:5px;
			li
				border-bottom:1px solid #333
				padding:10px 0
				overflow:hidden;
				.event-cell
					padding:5px 15px 5px 5px
					max-width:33%
					float:left;
					text-align:left;
				.event-name
					font-size:1.2em
					font-style:italic
					max-width:40%
					word-wrap:break-word;
			li.header
				background:#ccc
				text-align center

	[slide-type="image"]
	[slide-type="url"]
	[slide-type="updates"]
	[slide-type="venue"]
		background:rgba(150,202,216,1);
	
	#maps
		float:right;
		width:48%;
		.map 
			float:right;
			background:#fff;
			margin:5px;
			padding:10px;
			border-radius:5px;
			img 
				width:80%;
	
	#events-list
		width:48%;
		float:left;
		li 
			overflow:hidden
		li.header
			margin-top:20px;
		li.header:first-child
			margin-top:5px;
		li.event 
			color:rgba(105,61,40,1);
			font-size:1.2em;
			text-shadow:2px 2px 0px rgba(255,255,255,0.8);
			padding:5px 0;
			margin-bottom:5px;
			text-align:right;
.container {
  width: 157px;
  height: 75px;
  position: relative;
  top:-5px;
}

.box {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index:1;
  -webkit-transform-style: preserve-3d;
  -webkit-transform: rotateY(23deg) rotateX(-46deg);
  -webkit-transition:all 0.5s ease-in-out
  left:-44px
}
.option
	&.selected
		.title
			color:rgba(192,81,57,1)
			text-shadow:0 0 1px #000
		.box
			-webkit-transform: rotateY(23deg) rotateX(317deg);
			.top
				background:rgba(246,148,96,1)
			.front
				background:rgba(93,34,10,1)

.box figure {
  display: block;
  position: absolute;
}

.box .front,
.box .back {
  width: 157px;
  height: 50px;
}

.box .top,
.box .bottom {
  width: 157px;
  height: 50px;
}

.box .front  { background:rgba(49,58,65,1);-webkit-transform: rotateY(   0deg ) translateZ(  24px ); }
.box .back   { -webkit-transform: rotateX( 180deg ) translateZ(  24px ); }
.box .top    { background:rgba(80,83,89,1);-webkit-transform: rotateX(  90deg ) translateZ( 26px ); }
.box .bottom { -webkit-transform: rotateX( -90deg ) translateZ( 26px ); }


//bubbles

.bubble
	background:#fff;
	color:rgba(238,99,75,1)
	padding:30px 35px;
	width:43%;
	box-shadow:10px 12px 0px rgba(246,149,97,1);
	margin:10px 10px 60px 10px;
	position:relative;
	float:left;
	&.drop
		background:#fff;
	&:before
		content: "";
		position: absolute;
		bottom: -45px;
		left: 32px;
		border-width: 0 0 40px 40px;
		border-style: solid;
		border-color: transparent rgba(246,149,97,1)

	&:after
		content: "";
		position: absolute;
		bottom: -40px;
		left: 20px;
		border-width: 0 0 40px 40px;
		border-style: solid;
		border-color: transparent #fff
	&.main 
		width:93%;
	.headline
		font-size:3em;
		font-family:Georgia;
		margin:10px 0;
	.text 
		font-family:Arial,sans;
		color:rgba(238,98,75,1);
		margin:20px 0;
		font-size:1.5em;
	.timestamp
		text-align:right;
		font-size:11px;
		font-style:italic;
		margin:10px 0;
.stripes
	background-color: rgba(239,107,50,1);
	background-image: -webkit-gradient(linear, 0 0, 100% 100%, color-stop(.25, rgba(255, 255, 255, .2)), color-stop(.25, transparent), color-stop(.5, transparent), color-stop(.5, rgba(255, 255, 255, .2)), color-stop(.75, rgba(255, 255, 255, .2)), color-stop(.75, transparent), to(transparent));
	background-image: -webkit-linear-gradient(-45deg, rgba(255, 255, 255, .2) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, .2) 50%, rgba(255, 255, 255, .2) 75%, transparent 75%, transparent);
	background-image: -moz-linear-gradient(-45deg, rgba(255, 255, 255, .2) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, .2) 50%, rgba(255, 255, 255, .2) 75%, transparent 75%, transparent);
	background-image: -ms-linear-gradient(-45deg, rgba(255, 255, 255, .2) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, .2) 50%, rgba(255, 255, 255, .2) 75%, transparent 75%, transparent);
	background-image: -o-linear-gradient(-45deg, rgba(255, 255, 255, .2) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, .2) 50%, rgba(255, 255, 255, .2) 75%, transparent 75%, transparent);
	background-image: linear-gradient(-45deg, rgba(255, 255, 255, .2) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, .2) 50%, rgba(255, 255, 255, .2) 75%, transparent 75%, transparent);
	-webkit-background-size: 20px 20px;

.vertical-stripes
	background-color: rgba(239,107,50,1);
	background-image: -webkit-gradient(linear, 0 0, 100% 0, color-stop(.5, rgba(255, 255, 255, .2)), color-stop(.5, transparent), to(transparent));
	background-image: -webkit-linear-gradient(0deg, rgba(255, 255, 255, .2) 50%, transparent 50%, transparent);
	background-image: -moz-linear-gradient(0deg, rgba(255, 255, 255, .2) 50%, transparent 50%, transparent);
	background-image: -ms-linear-gradient(0deg, rgba(255, 255, 255, .2) 50%, transparent 50%, transparent);
	background-image: -o-linear-gradient(0deg, rgba(255, 255, 255, .2) 50%, transparent 50%, transparent);
	background-image: linear-gradient(0deg, rgba(255, 255, 255, .2) 50%, transparent 50%, transparent);
	-webkit-background-size: 20px 20px;

.arrow
