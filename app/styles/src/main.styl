*
	font-family:'Helvetica-Neue-Ultralite', Helvetica
	font-weight:300
body
	overflow:hidden
	padding:0
	margin:0
ul, li
	padding:0
	margin:0
	list-style:none;
		
#background
	width:100%;
	right:0
	position:absolute;
	top:0;
	background:rgba(166,192,215,1)
	height:100%

header
	color:#fff
	position:fixed
	top:0
	width:100%
	z-index:1
	text-align:center;
	margin:15px 0;
	-webkit-perspective:600;
	nav
		width:120%;
		// overflow:hidden;
		margin:0 auto;
		text-align center
		margin-left:10%;
		-webkit-transform:rotateY(40deg)
		-webkit-transform-origin: 0 0;
		div.option
			height:75px;
			width:157px;
			float:left;
			position:relative;
			margin-right:5px;
			top:4px;
			-webkit-transition: all 0.2s ease-in-out;
			&.selected
				height:82px; 
				top:0px;
				z-index:4;
				div.top
					background-color:rgba(246,148,96,1);
				div.bottom
					background-color: rgba(93,34,10,1);
				div.icon
					background-size: 54%;
					background-position: 6px 11px;
				div.title
					opacity:1;

			div.top 
				background-color:rgba(80,83,89,1);
				height:47%;
				width:100%;
				top:none;
				z-index:1;
				-webkit-transform: skew(20deg);
			div.bottom 
				background-color:rgba(49,58,65,1);
				height:47%;
				width:100%;
				z-index:1;
				-webkit-transform: skew(-20deg);
			div.icon
				position:absolute;
				top:0;
				height:100%;
				width:50%;
				z-index:2;
				left:31%
		div.title
			opacity: 0;
			color: #c05139;
			position: absolute;
			z-index: 5;
			font-size: 2.2em;
			font-family: Georgia;
			font-style: italic;
			text-align: center;
			width: 100%;
		div.logo
			height:75px;
			width:157px;
			float:left;
			-webkit-transform:rotateY(0)
			background:url('/images/menu-1.png') 0 0 no-repeat;
		div.shuttle
			div.icon
				// background:url('/images/menu-2.png') 0 0 no-repeat;
				background-size: 52%;
				background-position: 6px 9px;
		div.events
			div.icon
				// background:url('/images/menu-3.png') 0 0 no-repeat;
				background-size: 100%;
				background-position: 6px 9px;
		div.updates
			div.icon
				// background:url('/images/menu-6.png') 0 0 no-repeat;
				background-size: 52%;
				background-position: 6px 9px;
			
#kiosk
	-webkit-transition:all 0.5s ease-in-out
	text-align:center;
	overflow hidden
	.slide
		height:100%;
		max-height:80%
		width:100%
		display:block
		float:left;
		margin-top:130px;
		.content
			width:80%;
			height:100%;
			margin:0 auto;
			iframe
				width:100%;
				height:100%;
				margin:0 auto
			.image
				height:100%;
				width:100%;
			h2.sub
				font-style:italic
			.map
				width:100%
				height:250px
				overflow:hidden
				img 
					width:75%
	[slide-type="schedule"]
		ul
			margin-top:5px;
			li
				border-bottom:1px solid #333
				padding:10px 0
				overflow:hidden;
				.event-cell
					padding:5px 15px 5px 5px
					max-width:33%
					float:left;
					text-align:left;
				.event-name
					font-size:1.2em
					font-style:italic
					max-width:40%
					word-wrap:break-word;
			li.header
				background:#ccc
				text-align center

	[slide-type="image"]
	[slide-type="url"]
	[slide-type="updates"]

	.slide.visible
		opacity:1


