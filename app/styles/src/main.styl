*
	font-family:'Helvetica-Neue-Ultralite', Helvetica
	font-weight:300
body
	overflow:hidden
	padding:0
	margin:0
ul, li
	padding:0
	margin:0
	list-style:none;
header
	overflow:hidden
	background:#666
	color:#fff
	position:fixed
	top:0
	width:100%
	z-index:1
	#sxsw-logo
		float:left;
		padding:10px
		border-right:1px solid #333
	nav
		ul
			li
				padding:10px
				float:left;
				border-right:1px solid #333
			li.selected
				background:#fff
				color:#000			
#background
	width:100%;
	right:0
	position:absolute;
	top:0;
	background:rgba(166,192,215,1)
	height:100%

#kiosk
	-webkit-transition:all 0.5s ease-in-out
	text-align:center;
	overflow hidden
	.slide
		height:100%;
		max-height:100%
		width:100%
		display:block
		float:left;
		.content
			width:80%;
			height:100%;
			margin:0 auto;
			iframe
				width:75%;
				height:100%;
				margin:0 auto
			.image
				height:100%;
				width:100%;
			h2.sub
				font-style:italic
			.map
				width:100%
				height:250px
				overflow:hidden
				img 
					width:75%
	[slide-type="schedule"]
		ul
			margin-top:5px;
			li
				border-bottom:1px solid #333
				padding:10px 0
				overflow:hidden;
				.event-cell
					padding:5px 15px 5px 5px
					max-width:33%
					float:left;
					text-align:left;
				.event-name
					font-size:1.2em
					font-style:italic
					max-width:40%
					word-wrap:break-word;
			li.header
				background:#ccc
				text-align center

	[slide-type="image"]
	[slide-type="url"]
	[slide-type="updates"]

	.slide.visible
		opacity:1


