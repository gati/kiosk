*
	font-family:'Helvetica-Neue-Ultralite', Helvetica
	font-weight:300
body
	overflow:hidden
	padding:0
	margin:0
ul, li
	padding:0
	margin:0
	list-style:none;
header
	overflow:hidden
	background:#666
	color:#fff
	#sxsw-logo
		float:left;
		padding:10px
		border-right:1px solid #333
	nav
		ul
			li
				padding:10px
				float:left;
				border-right:1px solid #333
			li.selected
				background:#fff
				color:#000
				
#background
	z-index:1
	width:100%;
	right:0
	position:fixed;
	top:0;
	background:rgba(166,192,215,1)
	height:100%
	
#panels
	position:absolute;
	left:0
	opacity:0
	z-index:3
	-webkit-transition:opacity 2s ease-in-out
	.panel 
		height:500px
		width:500px
		float:left;
		margin:10px
		display:inline-block
		border:10px solid #333
	&.visible
		opacity:1


